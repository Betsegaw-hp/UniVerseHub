<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head')  %> 
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f2f2f3;
        }
        .navbar {
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
        }
        .blog-header {
            background-color: #3498db;
            color: white;
            padding: 4rem 0;
            margin-bottom: 3rem;
        }
        .card {
            border: none;
            box-shadow: 0 4px 6px rgba(0,0,0,.1);
            transition: transform 0.3s ease-in-out;
        }
        .card:hover {
            transform: translateY(-5px);
        }
        .card-img-top {
            height: 200px;
            object-fit: cover;
        }
        .card-title {
            font-weight: 600;
        }
        .card-text {
            color: #6c757d;
        }
        .btn-primary {
            background-color: #3498db;
            border-color: #3498db;
        }
        .btn-primary:hover {
            background-color: #2980b9;
            border-color: #2980b9;
        }
        .featured-post {
            background-color: #fff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0,0,0,.1);
            margin-bottom: 3rem;
        }
        .featured-post img {
            height: 400px;
            object-fit: cover;
        }
        .category-badge {
            position: absolute;
            top: 10px;
            left: 10px;
            padding: 5px 10px;
            background-color: rgba(52, 152, 219, 0.8);
            color: white;
            border-radius: 20px;
            font-size: 0.8rem;
        }
    </style>
</head>
<body>
  <%- include('../partials/nav')  %> 


    <header class="blog-header">
        <div class="container text-center">
            <h1 class="display-4 fw-bold">UniVerseHub Blog</h1>
            <p class="lead">Explore the latest insights, tips, and stories from our community.</p>
            <form class="d-flex justify-content-center mt-4">
                <div class="input-group" style="max-width: 500px;">
                    <input type="text" class="form-control" placeholder="Search blog posts..." aria-label="Search blog posts">
                    <button class="btn btn-light" type="button"><i class="bi bi-search"></i></button>
                </div>
            </form>
        </div>
    </header>

    <main class="container">
        <% if(featuredBlogs.length > 0) { %>
            <% featuredBlogs.map(blog => { %>
                <div class="featured-post row">
                    <div class="col-md-6">
                        <img src="<%= blog.thumbnail %>" class="img-fluid" alt="Featured post thumbnail">
                    </div>
                    <div class="col-md-6 d-flex flex-column justify-content-center p-4">
                        <span class="badge bg-primary mb-2">Featured</span>
                        <h2 class="fw-bold"><%= blog.title %></h2>
                        <p class="text-muted"><%= blog.snippet %></p>
                        <p><small class="text-muted">By <%= blog.author.name %> | May 20, 2023</small></p>
                        <a href="/blog/<%= blog.slug %>" class="btn btn-primary align-self-start">Read More</a>
                    </div>
                </div>
            <% }) %>
        <% } %>

        <h2 class="mb-4">Latest Posts</h2>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <% if( blogs.length > 0) { %>
                <% blogs.map(blog => { %>
                    <div class="col">
                        <div class="card h-100">
                            <img src="<%= blog.thumbnail %>" class="card-img-top" alt="Blog post thumbnail">
                            <span class="category-badge"><%= blog.category.name %></span>
                            <div class="card-body">
                                <h5 class="card-title"><%= blog.title %></h5>
                                <p class="card-text"><%= blog.snippet %></p>
                            </div>
                            <div class="card-footer bg-transparent border-top-0">
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted"><%= blog.createdAt?.toDateString() %></small>
                                    <a href="/blog/<%= blog.slug %>" class="btn btn-outline-primary btn-sm">Read More</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </div>

        <nav aria-label="Blog pagination" class="my-5">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                </li>
                <li class="page-item active" aria-current="page">
                    <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>
    </main>

    <%- include('../partials/footer')  %> 

</body>
</html>